<%- include("partials/header.ejs") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Edit Blog Post</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/blog/<%= blog.id %>/update">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="content" class="form-label">Content</label>
                            <textarea class="form-control" id="content" name="content" rows="8" required><%= blog.content %></textarea>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="/blog/<%= blog.id %>" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update Blog</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>